<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hssait.cursoandroid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="basedato.sqlite" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SegundaActivity"
            android:label="@string/title_activity_segunda" >
        </activity>
        <activity
            android:name=".SpinnerActivity"
            android:label="@string/title_activity_spinner" >
        </activity>
        <activity
            android:name=".ListViewActivity"
            android:label="@string/title_activity_list_view" >
        </activity>
        <activity
            android:name=".MasElementosActivity"
            android:label="@string/title_activity_mas_elementos" >
        </activity>
        <activity
            android:name=".RegistroActivity"
            android:label="@string/title_activity_registro" >
        </activity>
        <activity
            android:name=".EditItemActivity"
            android:label="@string/title_activity_edit_item" >
        </activity>
        <activity android:name=".NoticiasActivity" >
        </activity>
        <activity android:name=".SimpleNoticiaActivity" >
        </activity>
    </application>

</manifest>
